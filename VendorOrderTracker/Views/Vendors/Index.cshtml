@{
  Layout = "_Layout";
}

@using VendorOrderTracker.Models;

<h1>Vendor List:</h1>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet!</h3>
} 

<ul>
  @foreach (Vendor vendor in Model)
    {
      <li><a href='/vendors/@vendor.Id'>@vendor.VendorName</a></li>
    }
</ul>
<a href='/vendors/new'>Add a new vendor</a>

<form action="/vendors/delete" method="post">
      <button type="submit" name="button">Clear Vendors</button>
</form>

<p><a href='/'>Back home</a></p>