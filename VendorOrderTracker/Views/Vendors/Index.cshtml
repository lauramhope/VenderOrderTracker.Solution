@{
  Layout = "_Layout";
}

@using VendorOrderTracker.Models;

<h1>Vendors List:</h1>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet!</h3>
} 

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendors/@vendor.Id'>Vendor Name: @vendor.VendorName, Vendor Description: @vendor.VendorDescription</a></h3>
}

<p><a href='/'>Back home</a></p>