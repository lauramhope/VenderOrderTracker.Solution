@{
  Layout = "_Layout";
}

@using VendorOrderTracker.Models;

<h1>Vendor List:</h1>

@if (@Model.Count == 0)
{
  <h4>No vendors have been added yet!</h4>
} 

@foreach (Vendor vendor in Model)
{
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">@vendor.VendorName</h4>
      <p class="card-text">@vendor.VendorDescription</p>
      <a href='/vendors/@vendor.Id' class="btn btn-primary">View Vendor</a>
    </div>
  </div>
}

<a href='/vendors/new'>Add a new vendor</a>

<p><a href='/'>Back home</a></p>